<div class="section">
  <div class="row">
    <div class="col">
      <img src=<%= 'https://images.pexels.com/photos/157961/portrait-smile-happy-faces-smiling-157961.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1' %> >
    </div>
  <div class="col">
  <div class="data-display">
    <h2><%= @user.name%></h2>
    <p>Number of posts: <%= @user.posts.size %></p>
    </div>
  </div>
</div>
</div>
<div class="section">
<div class="profile-user">
<div class="bio">
    <h2>Bio</h2>
    <p><%= @user.bio%></p>
</div>

<% @user.recent_posts.each do |post| %>
  <div class="comment-section">
      <h4>Post : <%= post.title%></h4>
      <p><%= post.text%></p>
      <p>Comment <%= post.comments.size%>,  <span>Likes <%= post.likes_counter%></span></p>
  </div>
<%end%>
 <div class="my-boutton">
  <button class="button">
      <%= link_to "See all posts", user_posts_path(@user), {:class => "button_class"} %>
  </button>
  </div>
</div>
</div>